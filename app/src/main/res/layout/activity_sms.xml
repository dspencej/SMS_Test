<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_phone_number"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/phone_number_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="@string/label_enter_phone_number"
            android:autofillHints=""
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_message"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/message_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="4"
            android:hint="@string/label_enter_message"
            android:autofillHints=""
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/send_regular_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_send_regular_sms"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/send_covert_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_send_covert_sms"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_clear"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/received_message_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_received_message"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/received_message_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/decrypted_message_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_decrypted_message"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/decrypted_message_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>
